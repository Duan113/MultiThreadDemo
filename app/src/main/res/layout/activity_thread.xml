<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreadActivity"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="25"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="30sp"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多线程计算，点击空白处取消"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="异步任务计算，点击空白处取消"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_handle_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handle 下载图片"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_async_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask 下载图片"
        android:textSize="20sp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_other_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其他异步方式"
        android:textSize="20sp"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/iv_thread_img"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_other"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:text="在所有的告别里"/>
</LinearLayout>